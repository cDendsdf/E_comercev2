@model Categoria

@{
    ViewData["Title"] = "Eliminar";
    
}

<form method="post" asp-action="Eliminar">
    <input asp-for="CategoriaId" hidden />
    <div class="border p-3 ">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Esta Seguro de Eliminar esta Categoria?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoria</label>
                    <input asp-for="NombreCategoria" disabled class="form-control" />

                </div>  
            </div>
       
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>

        </div>


    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

