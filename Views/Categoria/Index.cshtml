@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Lista de Categorias";
}



<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-outline-dark">
                <i class="fas fa-plus"></i>  Nueva Categoria
            </a>

        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre Categoria
                    </th>


                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.NombreCategoria</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categoria" asp-action="Editar" asp-route-Id="@item.CategoriaId" class="btn btn-dark mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@item.CategoriaId" class="btn btn-warning mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registros de Categoria</p>
    }

</div>

