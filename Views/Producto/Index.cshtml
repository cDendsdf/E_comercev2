@model IEnumerable<Productos>

@{
    ViewData["Title"] = "Index";
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="fas fa-plus"></i>  Nuevo Producto
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Precio
                    </th>
                    <th >
                        Categoria
                    </th>

                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.NombreProducto</th>
                        <th>$@Math.Abs(item.Precio).ToString("N2")</th>
                        <th>@item.Categoria.NombreCategoria</th>
                       
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-dark mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-warning mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }

</div>

