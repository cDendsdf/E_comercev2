@model IEnumerable<Detalles>

@{
    ViewData["Title"] = "Index";

}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
         
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Precio
                    </th>
                
                
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <th>@item.Producto.NombreProducto</th>
                        <th>$@Math.Abs(item.Producto.Precio).ToString("N2")</th>
                       

                
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }

</div>

