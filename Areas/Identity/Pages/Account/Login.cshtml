<div>
    <section class="vh-70" style="background-color: #b6d9d9;">
        <form id="account" method="post">
            <hr />
            <div 
                asp-validation-summary="ModelOnly" class="text-danger" role="alert">
            </div>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Login</h3>
                       

                        <div class="form-outline mb-4">
                                    <label asp-validation-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" type="text" class="form-control" placeholder="Correo Electronico" />
                                    
                        </div>

                        <div class="form-outline mb-4">
                                    <label asp-validation-for="Input.Password" class="form-label">Password</label>
                                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Contraseña" />
                        </div>

                        <!-- Checkbox -->
                                <div class="checkbox mb-3">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>

                                <div>
                                <button class="w-100 btn btn-lg btn-dark" type="submit">Login</button>
                                </div>

                                <div>
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: black">Olvidaste tu contraseña?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: black">Registrarse como nuevo usuario</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: black">Reenviar correo electrónico de confirmación</a>
                                    </p>
                                </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
        </form>
</section>






